                <lottie-player src="{{ABS_PATH}}/assets/lottiefile.json"  background="transparent"  speed="1"  style="width: 300px; height: 300px;" loop autoplay></lottie-player>
                <p class = "pl-2">Thank you for signing up to Lawtrella check your inbox to verify your email</p>
