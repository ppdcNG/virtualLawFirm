{{> header }}

<style>
    .checked {
        color: orange;
    }
</style>
<style>
.banner{
  background-image: url({{{courseImage}}});
  background-position: center;
  background-size: cover;
  background-attachment: fixed;

}
.shadow-text{
  text-shadow: .5em .5em 10px rgba(0,0,0, .45);
  background-color: rgba(0, 0, 0, .45);
  padding: 10px
}

#promoForm{
  max-width: 700px;
  
}
</style>

<header>
    <nav class="mb-1 pt-3 pb-3 navbar navbar-expand-lg navbar-dark special-color">
        <a class="navbar-brand default-color p-3" href="#">{{AppName}}</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent-333"
        aria-controls="navbarSupportedContent-333" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent-333">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/">Home
                        <span class="sr-only">(current)</span>
                    </a>
                </li>
            </ul>

            <ul class="navbar-nav ml-auto nav-flex-icons" id="isLoggedin">
                <li class="nav-item avatar dropdown">
                    <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink-55" data-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
                    <img src='https://images.pexels.com/photos/399772/pexels-photo-399772.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500' class="rounded-circle z-depth-0"
                        width="50" />
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg-right dropdown-secondary"
                    aria-labelledby="navbarDropdownMenuLink-55">
                        <a class="dropdown-item" href="/client/dashboard">Go to Dashboard</a>
                        <a class="dropdown-item" href="#">My List</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">My Certificates</a>
                    </div>
                </li>

                <li class="nav-item">
                    <a class="nav-link waves-effect waves-light" href="{{ABS_PATH}}logout">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </a>
                </li>
            </ul>
        </div>

    </nav>
</header>

<section class="banner jumbotron default-color mt-0">
    <div class="container p-3">
        <div class="row">
            <div class="col-md-8">
                <p><a class="white-text shadow-text" href="/e-learning">&larr; Back to e-Learning Portal</a></p>
                <h3 class="text-white shadow-text" data-aos="fade-right" data-aos-duration="1500">{{courseTitle}}</h3>
                <hr width="100" align="left"/>
                <p class="text-muted">
                    <span class = "white-text shadow-text">Course Rating</span> : 
                    
                    <span class="pl-2 white-text shadow-text" id="numberRated"><em>{{rating}}</em></span>
                </p>
            </div>
            <div class="col-md-4 p-1">
                <button class="btn white text-muted" >
                    <h6 class="text-success" id="price">Price</h6>
                    <hr class="m-0" />
                    <h5 id="enroll-status">{{{price}}}</h5>
                </button>

            </div>
        </div>
    </div>
</section>

<main class="container pt-3">
    <div class="row">
        <div class="col-md-8">
            <section class="mb-5">
                <h4 data-aos="zoom-out" data-aos-duration="1000">About Course</h4>
                <hr width="100" align="left"/>

                <p class="text-justify">
                    {{{description}}}
                </p>
            </section>

            <section class="mb-3" id="course-outline">
                <h4 data-aos="zoom-out" data-aos-duration="1000">Outline</h4>

                <ul class="list-group list-group-flush">
                    {{{contentList}}}
                </ul>

                <div class="border text-center p-3">
                    <a href="#enroll-btn">Enroll to Access Course Content</a>
                </div>
            </section>
            
            <section id="course-content">
                <div class="card p-3">
                    <h6 class="my-3 text-success">LESSON 1</h6>
                    <h4>
                        <span>Introduction</span>
                        <span class="float-right"><button class="btn btn-sm" data-toggle="modal" data-target="#lessonModal">Play Lesson</button></span>
                    </h4>
                </div>
                
                <div class="card p-3">
                    <h6 class="my-3 text-success">LESSON 2</h6>
                    <h4>
                        <span>Example Content</span>
                        <span class="float-right"><button class="btn btn-sm" data-toggle="modal" data-target="#lessonModal">Play Lesson</button></span>
                    </h4>
                </div>
            </section>


        </div>

        <div class="col-md-4">
            <div class="border">
                <ul class="list-group-flush">
                    <li class="list-group-item">
                        <div class="md-v-line"></div><i class="fas fa-laptop mr-4 pr-3"></i> Self paced course
                    </li>
                    <li class="list-group-item">
                        <div class="md-v-line"></div><i class="fas fa-video mr-5"></i> {{contentCount}} modules
                    </li>
                    <li class="list-group-item">
                        <div class="md-v-line"></div><i class="fas fa-language mr-5"></i> Quizes to cement learning
                    </li>
                    <li class="list-group-item">
                        <div class="md-v-line"></div><i class="fas fa-certificate mr-5"></i> Certificate of Completion
                    </li>
                </ul>
            </div>
        </div>

        {{! MODALS SECTION }}
        <div class="modal fade" id="lessonModal" tabindex="-1" role="dialog" aria-labelledby="lessonModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-body">
                        <iframe width="100%" height="315" src="https://www.youtube.com/embed/y881t8ilMyc" frameborder="0" allowfullscreen></iframe>
                        </iframe>
                    </div>
                </div>
            </div>
        </div>

</main>

<div class="h-25"></div>

{{> footer}}

<script src="{{ABS_PATH}}js/auth.js"></script>
<script src="{{ABS_PATH}}js/elearning.js"></script>
<script src="{{ABS_PATH}}js/libraries/rating.js"></script>

<script>
    // enroll button 
    $("#enroll-btn").click(async () => {
        await $("#course-outline").css("display", "none");
        await $("#course-content").css("display", "block");
        $("#enroll-status").text("Enrolled");
    })
</script>