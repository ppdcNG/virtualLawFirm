{{> header }}

<link rel="stylesheet" href="/stylesheets/sidenav.css" type='text/css'></link>
<style>
    .card {
        height: 35vh;
    }
</style>

<main id="main">
    <header>
        <nav class="mb-1 px-2 navbar navbar-expand-lg">
            <a class="navbar-brand default-color text-white p-3" href="/">{{AppName}}</a>
            <h5>e-Learning Portal</h5>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent-333"
            aria-controls="navbarSupportedContent-333" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            </button>

            <ul class="navbar-nav ml-auto nav-flex-icons" id="isLoggedin">

            </ul>
        </nav>
    </header>

    <div id="mySidenav" class="sidenav">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <a class="mt-3" href="/">Home</a>
        <a href="/mylist" class="white">My List</a>
    </div>


    {{! main content section starts here  }}
    <section class="container pt-2 pl-5 main-section">
        <div class="container"  id="menuIcon">
            <span style="font-size:20px;cursor:pointer" onclick="openNav()">&#9776;</span>
        </div>

        <section>
            <h4 class="primary-green" data-aos="fade-right" data-aos-duration="1500">My List</h4>
            <hr width="100" align="left"/>
            <a class="btn btn-sm" href="/e-learning"><i class="fas fa-arrow-left"></i>Back to Portal</a>
        </section>

        <section>
            <div class="row">
                <div class="col-md-4">
                    <div class="card shadow mt-1" data-aos="zoom-out" data-aos-duration="1500">
                        <div class="view overlay">
                            <img class="card-img-top" src="https://mdbootstrap.com/img/Mockups/Lightbox/Thumbnail/img%20(67).jpg"
                                alt="html_css_image">
                            <a href="#!">
                                <div class="mask rgba-white-slight"></div>
                            </a>
                        </div>

                        <div class="card-body">
                            <h4 class="card-title"><a href="/e-learning/courseDetails">Business Law Certification</a></h4>
                            <p class="card-text"></p>
                            <a href="#" class="btn btn-primary">Enroll</a>
                            <span class="float-right mt-3">
                                <button class="" data-toggle="dropdown"><i class="fas fa-ellipsis-h"></i></button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="/e-learning/courseDetails">Go to Course</a>
                                    <a class="dropdown-item" href="#">Add to My List</a>
                                </div>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </section>

{{>userdata}}
{{>footer}}

</main>

<script src="{{ABS_PATH}}js/auth.js"></script>
<script src="{{ABS_PATH}}js/elearning.js"></script>