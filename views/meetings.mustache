            <a class="btn-floating btn-lg btn-outline-danger mx-3 meeting-button" data-toggle = "tooltip" title = "Toggle Microphone" onclick = "toggleAudio()" id = "audioButton"><i class="fas fa-microphone-slash"></i></a>
            <a class="btn-floating btn-lg btn-outline-default mx-3 meeting-button" data-toggle = "tooltip" title = "Toggle Video" onclick = "toggleVideo()" id = "videoButton"><i class="fas fa-video"></i></a>
            <a class="btn-floating btn-lg btn-outline-danger mx-3 meeting-button" data-toggle = "tooltip" title = "Toggle " onclick = "hangup()" id = "hangupButton"><i class="fas fa-phone-slash"></i></a>
          </div>
        </div> }}
        
