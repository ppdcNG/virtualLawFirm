  <input type = "hidden" id = "meetingId" value = "{{meetingId}}" />
  <input type = "hidden" id = "uid" value = "{{uid}}" />
  <input type = "hidden" id = "taskId" value = "{{taskId}}" />
  <input type = "hidden" id = "username" value = "{{username}}" />
  <input type = "hidden" id = "photoUrl" value  = "{{photoUrl}}" />
  <input type = "hidden" id = "present" value  = "{{present}}" />
  <input type = "hidden" id = "join" value  = "{{join}}" />

  <main>
    <section class="container py-5">
      <h2 data-aos="fade-right" data-aos-duration="1000">Welcome To {{AppName}} meetings</h2>
      <hr width="100" align="left" />
      <div class="edge-header default-color" style = "margin-bottom: -9em; height: 9em;"></div>
      <div id = "membersSection" class = "container py-5 d-flex flex-column">
        <h3 data-aos ="fad-right" data-aos-duration="1000" class = "white-text" class = "h3">Meeting Details</h3>
      </div>
      <div class="card text-center" id = "meetingDetails">
        <div class="card-body">
          <div>
            <i class="fas fa-users fa-5x"></i>
            <h5 class="card-title">Meeting Date</h5>
            <p class="card-text" id = "meetingDate"></p>
            <h5 class="card-title">Meeting Time</h5>
            <p class="card-text" id = "meetingTime"></p>
            <h5 class="card-title">Active Members <span id = "memberNumber"></span></h5>
            <p class="card-text" id = "meetingMembers">With supporting text below as a natural lead-in to additional content.</p>
            <button type = "button" class = "btn btn-success waves-effect px-3"  id = "joinButton"><i class="fas fa-phone pr-2" aria-hidden="true"></i>{{join}} Call</button>
          </div>
        </div>
        <div id = "loadingOverlay" class = "w-100 h-100  flex-colum justify-content-center" style = "position: absolute; left: auto; background-color: rgba(0,0,0, 0.4)">
            <div class="spinner-grow slow align-middle align-self-center" role="status" id="loadingSpinner"><span class="sr-only">Loading...</span></div>
        </div>
      </div>
      
    </section>
    <div id = "videoSection" class = "p-5 m-5">
      <div class = "row justify-content-center p-2" >
        <div class="card col-sm-4 p-3">
          <div class = "card-header">{{username}}</div>
          <div id="localVideo" class = " align-self-center p-2 m-2" style = "width: 400; height:300;"></div>
          <div id = "avartar" class = "align-self-center p-2 m-3" style = "display: none">
            <img id = "avi" src="{{photoUrl}}" style="width:100;height:100" class="rounded-circle mx-auto d-block" alt="profile_pic">
          </div>
          <div class=" align-self-center w-45 d-flex justify-content-around">
            <a class="btn-floating btn-lg btn-outline-danger mx-3 meeting-button" data-toggle = "tooltip" title = "Toggle Screen Sharing" data-tg onclick = "toggleScreen()" id = "shareScreenButton"><i class="fas fa-desktop"></i></a>
            <a class="btn-floating btn-lg btn-outline-elegant mx-3 meeting-button" data-toggle = "tooltip" title = "Toggle Microphone" onclick = "toggleAudio()" id = "audioButton"><i class="fas fa-microphone"></i></a>
            <a class="btn-floating btn-lg btn-outline-elegant mx-3 meeting-button" data-toggle = "tooltip" title = "Toggle Video" onclick = "toggleVideo()" id = "videoButton"><i class="fas fa-video"></i></a>
            <a class="btn-floating btn-lg btn-outline-danger mx-3 meeting-button" data-toggle = "tooltip" title = "Hangup " onclick = "hangup()" id = "hangupButton"><i class="fas fa-phone-slash"></i></a>
          </div>
        </div>
      </div>
      <div id = "remoteStreams" class = "row justify-content-center m-5">
        {{! <div class="card col-sm-4 p-3">
