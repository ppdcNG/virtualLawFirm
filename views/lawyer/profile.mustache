</header>

<input type = "hidden" id = "uid" value = "{{uid}}"/>
<input type = "hidden" id = "displayName" value = "{{displayName}}"/>

<section id="register-section" class="h-150 mt-3">
    <div class="container">
        <div class="d-flex justify-content-center">
            <div class="stepwizard">
                <div class="stepwizard-row setup-panel">
                    <div class="stepwizard-step">
                        <a href="#step-1" type="button" class="btn btn-primary btn-circle">1</a>
                        <p>Profile</p>
                    </div>

                    <div class="stepwizard-step">
                        <a href="#step-2" type="button" class="btn btn-success btn-circle" disabled="disabled">2</a>
                        <p>Record</p>
                    </div>

                    <div class="stepwizard-step">
                        <a href="#step-3" type="button" class="btn btn-success btn-circle" disabled="disabled">3</a>
                        <p>Upload</p>
                    </div>
                </div>
            </div>
        </div>
        
        <p class="text-center blue-text">Click on any number to return to a section</p>
  
        <div class="progress mb-3">
          <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 33%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">33%</div>
        </div>
        
            <div class="row setup-content" id="step-1">
                <div class="col-md-12">
                    <h3> Profile </h3>
                    <hr/>

                    <form id="lawyerContact" role="form" class="needs-validation" novalidate>
                        <img id="uploadedPic" src="https://i1.wp.com/www.essexyachtclub.co.uk/wp-content/uploads/2019/03/person-placeholder-portrait.png?fit=500%2C500&ssl=1" alt="profile pic" class="rounded-circle mx-auto d-block" width="100" />
                        <div class="md-form">
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="profilePic" accept="image/x-png,image/jpg,image/jpeg" required>
                                <label class="custom-file-label" for="profilePic" data-browse="Select">Select a profile picture</label>
                            </div>
                        </div>

                        <div class="md-form">
                            <input type="text" class="form-control" name="name" required/>
                            <label for="name" class="label">Name:</label>
                        </div>

                        <div class="md-form">
                            <input type="text" class="form-control" name="address" required/>
                            <label for="address" class="label">Address:</label>
                        </div>

                        <div class="md-form">
                            <input type="text" class="form-control" name="country" required/>
                            <label for="country" class="label">Country:</label>
                        </div>

                        <div class="md-form">
                            <input type="text" class="form-control" name="lga" required/>
                            <label for="lga" class="label">LGA:</label>
                        </div>

                        <div class="md-form">
                            <textarea name="briefProfile" class="md-textarea form-control" rows="3" required></textarea>
                            <label for="briefProfile">Brief profile (200 words)</label>
                        </div>
                        
                        <button class="btn btn-info btn-lg pull-right" id="saveContact" type="submit">Save</button>
                        <button class="btn btn-primary nextBtn btn-lg pull-right" type="button" >Next</button>
                    </form>
                </div>

            </div>

            <div class="row setup-content" id="step-2">
                <div class="col-md-12">
                    <h3> Record</h3>
                    <hr/>

                    <form id="updateRecord">
                        <div class="md-form">
                            <input type="number" class="form-control" name="courtEnrollmentNumber" required/>
                            <label class="label">Supreme Court Enrollment Number:</label>
                        </div>

                        <div class="md-form mt-2">
                            <input type="number" name="yearOfEnrollment" id="year" class="form-control">
                            <label for="yearOfEnrollment">Year of Enrollment</label>
                        </div>

                        <hr/>

                        <fieldset class="border p-2">
                            <legend>Questionaire (Toggle the checkbox)</legend>

                            <span>Do you have a criminal record?</span>
                            <div class="custom-control custom-radio">
                                <input type="radio" class="custom-control-input" value="yes" id="criminalRecord1" name="criminalRecord">
                                <label class="custom-control-label" for="criminalRecord1">Yes</label>
                            </div>

                            <div class="custom-control custom-radio mb-2">
                                <input type="radio" class="custom-control-input" value="no" id="criminalRecord2" name="criminalRecord">
                                <label class="custom-control-label" for="criminalRecord2">No</label>
                            </div>

                            <span>Are you the subject of any ongoing criminal investigation?</span>
                            <div class="custom-control custom-radio">
                                <input type="radio" class="custom-control-input" value="yes" id="criminalInvestigation" name="criminalInvestigation">
                                <label class="custom-control-label" for="criminalInvestigation">Yes</label>
                            </div>

                            <div class="custom-control custom-radio mb-2">
                                <input type="radio" class="custom-control-input" value="no" id="criminalInvestigation2" name="criminalInvestigation" checked>
                                <label class="custom-control-label" for="criminalInvestigation">No</label>
                            </div>

                            <span>Have you ever been indicted for professional misconduct?</span>
                            <div class="custom-control custom-radio">
                                <input type="radio" class="custom-control-input" value="yes" id="misconductIndictment" name="misconductIndictment">
                                <label class="custom-control-label" for="misconductIndictment">Yes</label>
                            </div>

                            <div class="custom-control custom-radio mb-2">
                                <input type="radio" class="custom-control-input" value="no" id="misconductIndictment2" name="misconductIndictment" checked>
                                <label class="custom-control-label" for="misconductIndictment">No</label>
                            </div>

                            <span>Do you have against you an ongoing investigation for misconduct?</span>
                            <div class="custom-control custom-radio">
                                <input type="radio" class="custom-control-input" value="yes" id="misconductInvestigation" name="misconductInvestigation">
                                <label class="custom-control-label" for="misconductInvestigation">Yes</label>
                            </div>

                            <div class="custom-control custom-radio mb-2">
                                <input type="radio" class="custom-control-input" value="no" id="misconductInvestigation2" name="misconductInvestigation" checked>
                                <label class="custom-control-label" for="misconductInvestigation">No</label>
                            </div>

                        </fieldset>

                        <hr/>

                        <fieldset class="border p-2">
                            <legend>Account Details</legend>
                            <div class="form-row">
                                <div class="col-md-2 mb-3 md-form">
                                    <label for="bankname">Bank Name</label>
                                    <input type="text" class="form-control" name="accountDetails.bankName" id="bankname" required>
                                </div>
                                <div class="col-md-3 mb-3 md-form">
                                    <label for="account">Account Number</label>
                                    <input type="text" class="form-control" id="account" name="accountDetails.accountNumber" required>
                                </div>
                                <div class="col-md-3 mb-3 md-form">
                                    <label for="bvn">BVN</label>
                                    <input type="number" class="form-control" id="bvn" name="accountDetails.bvn" required>
                                </div>

                                <div class="col-md-4 mb-3 md-form">
                                    <label for="accountName">Account Holder Name</label>
                                    <input type="text" class="form-control" name="accountDetails.accountName" required>
                                </div>
                            </div>
                        </fieldset>

                        <button class="btn btn-info btn-lg pull-right" id="saveRecord" type="submit">Save</button>
                        <button class="btn btn-primary nextBtn btn-lg pull-right" type="button" >Next</button>
                    </form>

                </div>
            </div>

            <div class="row setup-content" id="step-3"> 
            {{! <div class="col-xs-6 col-md-offset-3"> }}
                <div class="col-md-12">
                <h3> Upload </h3>
                <hr/>

                {{! upload docs }}
                <form id="updateUpload">

                    <div>
                        <div class="container">
                            <div class="row" id="uploadedDocs">
                                <div class="col-md-3">
                                    <!-- Card -->
                                    <div class="card">
                                        <!-- Card image -->

                                        <!-- Card content -->
                                        <div class="card-body">
                                            <h4 class="card-title"><a>Doc title</a></h4>
                                            <a href="#" class="btn btn-danger">Delete</a>
                                        </div>
                                    </div>
                                    <!-- Card -->
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr/>

                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-info" data-toggle="modal" data-target="#document">
                    Upload Document
                    </button>

                    <hr/>

                    <div class="md-form">
                        <input type="text" name="specialization" class="form-control" required/>
                        <label class="label">Areas of specialization</label>
                    </div>

                    <div class="md-form">
                    <span class="text-muted">Select Tags</span>
                        <select class="tags form-control mt-2" id="tags" name="tags[]" multiple="multiple">
                            {{{tags}}}
                        </select>
                    </div>

                    <div class="md-form">
                        <input type="number" name="workExperience" class="form-control" id="fee" required>
                        <label for="workExperience">Work experience (years)</label>
                    </div>

                    <div class="mb-3 md-form">
                        <label for="fee">Consultation Fee (Naira)</label>
                        <input type="number" name="consultationFee" class="form-control" id="fee" required>
                    </div>

                    <button class="btn btn-info btn-lg pull-right" id="saveUpload" type="submit">Submit</button>
                </form>
            </div>
        {{! </div> }}
        </div>
        
    </div>
</section>


<!-- Modal -->
<div class="modal fade" id="document" tabindex="-1" role="dialog" aria-labelledby="docModalLabel"
aria-hidden="true">
<div class="modal-dialog" role="document">
    <div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Choose document</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
        </button>
    </div>

    <div class="modal-body">

        <form id="selectDoc">
            <div class="mb-3 md-form">
                <label for="name">Name</label>
                <input type="text" name="title" class="form-control" required>
            </div>

            <div class="md-form">
                <div class="custom-file">
                    <input id = "docFile" type="file" class="custom-file-input">
                    <label class="custom-file-label" for="upload_doc" data-browse="Upload">Upload document</label>
                </div>
            </div>
            <button type="submit" id="saveDoc" class="btn btn-primary">Save</button>

        </form>

    </div>
    </div>
</div>
</div>
{{! / upload docs modal end }}

{{> footer}}

<script src="{{ABS_PATH}}js/auth.js"></script>
<script src="{{ABS_PATH}}js/libraries/form2js.js"></script>
<script src="{{ABS_PATH}}js/libraries/js2form.js"></script>
<script src="{{ABS_PATH}}js/lawyer/lawyerDashboard.js"></script>
<script src="{{ABS_PATH}}js/lawyer/profileFormScript.js"></script>

<script>
    loadBtn('saveContact');
    loadBtn('saveRecord');
    loadBtn('saveDoc');
    loadBtn('saveUpload');

    $('.tags').select2({
        maximumSelectionLength: 5
    });
</script>