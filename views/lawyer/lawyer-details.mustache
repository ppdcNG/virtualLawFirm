{{> header}}
<main>
    <div class="row">
        <div class="col-md-3 pt-5">
            <div class="text-center">
                <img src="https://images.amcnetworks.com/bbcamerica.com/wp-content/uploads/2016/01/anglo_1920x1080_abominablebride-e1451739221189-1600x720.jpg" width="200"/>
                <h3 class="mt-1">Sherlock Holmes, Esq</h3>
                <p>Baker Street, London</p>
                <hr/>
                <p><b>10 years</b> experience</p>
            </div>
        </div>
        <div class="col-md-9 pt-5">
            <div class="container">
                <div class="card">
                    <div class="card-body">
                        <p><b>Bio</b></p>
                        <p>I am lorem ipsum dolor sit amet. Lorem ipsum dolor sit amet.</p>
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <p><b>Supreme Court Enrolment Number:</b> 0123456789</p>
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <p><b>Year of enrollment:</b> 0123456789</p>
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <p><b>Areas of specialization:</b></p>
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <p><b>Consultation fee:</b> N100,000</p>
                    </div>
                </div>

                <div>
                    <button class="btn btn-success">Verify</button>
                    <button class="btn btn-danger">Delete</button>
                    <button class="btn btn-primary" data-toggle="modal" data-target="#msgModal">Send Message</button>
                </button>

            </div>
        </div>
    </div>
</main>
<br/>
<br/>
{{> footer}}

<!-- message modal -->
<div class="modal fade" id="msgModal" tabindex="-1" role="dialog" aria-labelledby="msgModal"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">Send Message</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body mx-3">
                <div class="md-form mb-5">
                    <input type="text" id="title" class="form-control validate">
                    <label data-error="wrong" data-success="right" for="email">Title</label>
                </div>

                <div class="md-form">
                    <i class="fas fa-pencil-alt prefix"></i>
                    <textarea id="form10" class="md-textarea form-control" rows="3"></textarea>
                    <label for="form10">Message</label>
                </div>

            </div>
            <div class="modal-footer d-flex justify-content-center">
                <button class="btn btn-default">Send</button>
            </div>
        </div>
    </div>
</div>