{{! add content modal  }}
<div class="modal fade" id="add-content-modal" tabindex="-1" role="dialog" aria-labelledby="addContentModal"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addContentModal">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container">

<!-- Material form contact -->
<div class="card">

    <!--Card content-->
    <div class="card-body px-lg-5 pt-0">

        <!-- Form -->
        <form class="text-center" style="color: #757575;" action="#!">

            <div class="md-form">
                <textarea id="about" class="form-control md-textarea" rows="3"></textarea>
                <label for="note">About Course</label>
            </div>

            <div class="md-form mt-3">
                <input type="text" id="title" class="form-control">
                <label for="title">Title</label>
            </div>

            <span class="text-muted">Content Type</span>
            <br/>
            <select class="form-control w-75" id="contentType">
                <option value="">Choose option</option>
                <option value="lesson">Lesson</option>
                <option value="question">Question</option>
            </select>

            <div id="lessonSection" class="border m-3 text-left" style="display: none">
                <div class="custom-file">
                  <input id="lessonDoc" type="file" class="custom-file-input">
                  <label class="custom-file-label" for="lessonDoc" data-browse="Upload">Upload Lesson Document</label>
                </div>
            </div>

            <div id="questionSection" class="border m-3 text-left" style="display: none">
                <ul id="questionsList"><ul>
                <form class="form-control text-left" id="addQuestionForm">

                    <div class="md-form mt-3">
                        <input type="text" id="question" class="form-control">
                        <label for="question">Question</label>
                    </div>

                    <div class="md-form">
                        <input type="text" id="answer" class="form-control">
                        <label for="answer">Answer</label>
                    </div>

                    <button class="btn" type="submit">Add</button>
                </form>
            </div>

            <button class="btn btn-outline-info btn-rounded btn-block z-depth-0 my-4 waves-effect" type="submit">ADD</button>

        </form>
        <!-- Form -->

    </div>

</div>
<!-- Material form contact -->

        </div>
      </div>
