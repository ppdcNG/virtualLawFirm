{{! add Link Modal  }}
<div class="modal fade" id="addLinkModal" tabindex="-1" role="dialog" aria-labelledby="addLinkModal"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add Link</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body container">

          <form id="linkForm">
              <input type = "hidden" id = "linkMode" value = "add"/>
              <input type = "hidden" id = "linkId" />
              <input type = "hidden" id = "linkType" name = "type"  value ="Link" />

              <div class="mb-3 md-form">
                  <label for="title">Link Title</label>
                  <input id = "title" type="text" name="title" class="form-control" required>
              </div>
              <div class="mb-3 md-form">
                  <label for="url">Link</label>
                  <input id = "url" type="url" name="url" class="form-control" required>
              </div>
              <button type="submit" id="saveLinkButton" class="btn btn-primary">Save</button>
          </form>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
{{! add lesson modal  }}
<div class="modal fade" id="addLessonModal" tabindex="-1" role="dialog" aria-labelledby="addLessonModal"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add Lesson</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body container">

          <form id="lessonForm">
              <input type = "hidden" id = "lessonMode" value = "add"/>
              <input type = "hidden" id = "lessonId" />
              <input type = "hidden" id = "lessonType" name = "type"  value ="Lesson" />
              <div class="mb-3 md-form">
                  <label for="title">Title</label>
                  <input type="text" name="title" class="form-control" required>
              </div>
              <div class="md-form">
                <textarea id="desc" name = "description" class="md-textarea form-control" rows="3" required></textarea>
                <label for="desc">Description</label>
              </div>
              <button type="submit" id="saveLessonButton" class="btn btn-primary">Save</button>
          </form>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

{{! add question modal  }}
<div class="modal fade" id="addQuestionModal" tabindex="-1" role="dialog" aria-labelledby="addQuestionModal"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add Question</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id = "questionForm" class = "p-3">
         <input type = "hidden" id = "questionMode" value = "add"/>
         <input type = "hidden" id = "questionId" />
         <input type = "hidden" name  = "type" value = "Question"/>
         <div class="md-form">
            <textarea id ="question" name="title" class="md-textarea form-control" rows="3" required></textarea>
            <label for="question">Question(200 words)</label>
         </div>
          <fieldset>
          <i data-toggle = "tooltip" title = "Add Options for questions" onclick = "addOption()" class="fas fa-plus-circle float-right"></i>
            <div id = "questionOptions">
              
            </div>
          </fieldset>
          <div class="md-form w-100">
            <span class="text-muted">Select Answer</span>
            <select class="tags form-control mt-2" id="answers" name="answers[]" style = "width: 100%" multiple="multiple" required>
            </select>
          </div>
          <button type="submit" id="saveQuestionButton" class="btn btn-primary">Save</button>
        
        </form>
        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
{{! add Video Modal modal  }}
<div class="modal fade" id="addVideoModal" tabindex="-1" role="dialog" aria-labelledby="addQuestionModal"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id = "addVideoTitle">Add Video for </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id = "uploadForm" class = " text-center">
          <p class = "text-info">If there is a video already for this course it will be overidden</p>
          <input type = "hidden" name = "lessonId" id = "videoLessonId" />
          <div class="md-form">
            <div class="custom-file">
                <input id="module" type="file" class="custom-file-input" required>
                <label class="custom-file-label" for="module" data-browse="Upload">Upload Module</label>
            </div>
          </div>
          <button type="submit" id="saveDoc" class="btn btn-primary"><i class = "fa fa-video"></i>Upload</button>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

{{! Video Progress Modal }}
<div class="modal fade" id="videoProgressModal" tabindex="-1" data-backdrop = "static" role="dialog" aria-labelledby="addQuestionModal"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <div class = "text-center pt-5">
            <span class = "text-center h3">Uploading Video</span>
            <div class="progress mb-5 mt-3" style = "height: 2rem">
            <div id ="progressBar" class="progress-bar " role="progressbar" style="width: 5%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" onclick = "cancelUpload()" >Cancel</button>
      </div>
    </div>
  </div>
</div>

