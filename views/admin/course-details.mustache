{{! add lesson modal  }}
<div class="modal fade" id="add-lesson-modal" tabindex="-1" role="dialog" aria-labelledby="addLessonModal"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add Lesson</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body container">

          <form id="lessonForm">
              <div class="mb-3 md-form">
                  <label for="title">Title</label>
                  <input type="text" name="title" class="form-control" required>
              </div>

              <div class="md-form">
                <textarea id="desc" name = "description" class="md-textarea form-control" rows="3"></textarea>
                <label for="desc">Description</label>
              </div>

              <div class="md-form">
                  <div class="custom-file">
                      <input id="module" type="file" class="custom-file-input">
                      <label class="custom-file-label" for="module" data-browse="Upload">Upload Module</label>
                  </div>
              </div>
              <button type="submit" id="saveDoc" class="btn btn-primary">Save</button>
          </form>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

