<main class="m-5">
    <section class="container">
        <div class = "banner h-50 pl-5">
          <p class="text-right"><a href="/admin">&larr; Back to Dashboard</a></p>
          <div class = "header-group h-100 d-flex flex-column justify-content-end text-white pb-5">
            <h3 class = "h3 shadow-text w-50" data-aos="fade-right" data-aos-duration="1500">{{courseTitle}}</h3>
            <p class = "shadow-text w-50">Modify or delete course details</p>
            <hr class = "" width="150" align="left"/>
          </div>
          
        </div>

        <ul class="nav nav-tabs md-tabs mt-5" id="myTabMD" role="tablist">
          <li class="nav-item">
            <a class="nav-link active" id="contents-tab-md" data-toggle="tab" href="#contents-md" role="tab" aria-controls="contents-md"
              aria-selected="true">Contents</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="detials-tab-md" data-toggle="tab" href="#details-md" role="tab" aria-controls="details-md"
              aria-selected="false">Course Details</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="promo-tab-md" data-toggle="tab" href="#promo-md" role="tab" aria-controls="promo-md"
              aria-selected="false">PROMO Codes</a>
          </li>
        </ul>
        <div class="tab-content border pt-5 container" id="myTabcontentsMD">
          <div class="tab-pane fade show active" id="contents-md" role="tabpanel" aria-labelledby="content-tab-md">

              <input type = "hidden" id = "courseId" value = "{{courseId}}" readonly />
              <div class="text-right">
                <button class="btn" id="addLessonButton">Add Lesson</button>
                <button class="btn" id = "addQuestionButton">Add Question</button>
                <button class="btn" id = "addLinkButton">Add Reading Link</button>
              </div>

              <h5>Content List</h5>
              <hr/>
              <ul class="list-group list-group-flush" id="contentList">
                <div class="d-flex justify-content-center">
                  <div class="spinner-grow slow" role="status" id="loadingTasks">
                    <span class="sr-only">Loading...</span>
                  </div>
                </div>
              </ul>
          </div>
          <!----Details Tab ---->
          <div class="tab-pane fade" id="details-md" role="tabpanel" aria-labelledby="details-tab-md">
                <h3>Edit Course Details</h3>
                <form id = "addCourseForm" class="border border-light p-5" >
                    <input type = "hidden" id = "editcourse" value = "edit" />
                    <div class =  "row">
                      <div class = "col-md-12 mb-4">
                          <label for="title">Title</label>
                            <input id= "title" type="text" name="title" class="form-control" required>
                      </div>
                      <div class = "col-md-12 mb-4">
                          <label for="title">Author</label>
                            <input id= "author" type="text" name="author" class="form-control" required>
                      </div>
                      <div class = "col-md-12 mb-4">
                          <label for="price">Price</label>
                          <input id = "price" name = "price" type="number"  class="form-control">
                      </div>
                      <div class = "col-md-12 mb-4">
                          <label for="price">Slashed Price</label>
                          <input id = "oldprice" name = "oldprice" type="text"  class="form-control">
                      </div>
                      
                      <div class = "col-md-12 mb-4">
                          <label for="desc">Description</label>
                          <textarea id="desc" name="details" class="md-textarea form-control" rows="3" required></textarea>
                      </div>
                      <div class = "col-md-12 mb-4">
                          <label for="category">Category</label>
                          <select name = "category" id = "category" class="browser-default custom-select">
                          {{{categories}}}
                        </select>
                      </div>
                      <div class = "col-md-12 mb-4">
                          <label for="tags">Tags</label>
                          <select id = "tags" multiple name = "tags[]" class="browser-default custom-select">
                          {{{tags}}}
                        </select>
                      </div>
                    </div>
                    
     
                    <div class = "d-flex flex-column justify-content-center">
                        <button  id = "submitCourseFormButton" class = "btn lt-btn-accent mt-3" type = "submit">Save</button>
                    </div>              
                </form>

                <hr/>
                
          </div>
          <div class="tab-pane fade" id="promo-md" role="tabpanel" aria-labelledby="promo-tab-md">
            <h5> Course Promo Codes </h5>

            <form id = "promoForm" class="border border-light p-5" >
                    <input type = "hidden" id = "promoMode" value = "add" />
                    <input type = "hidden" id = "promoId" value = "" />
                    <div class= "mb-4">
                        <label for="code">Promo Code</label>
                          <input id= "code" type="text" name="code" class="form-control" required>
                    </div>
                    <div class = "mb-4">
                        <label for="discount">Percentage Discount</label>
                        <input id = "discount" name = "discount" type="number"  class="form-control">
                    </div>
                    <div class = "d-flex flex-column justify-content-center">
                        <button  id = "submitPromoButton" class = "btn lt-btn-accent mt-3" type = "submit">Add Code</button>
                    </div>             
                </form>

            <h5>List of Codes</h5>
            <ul class="list-group list-group-flush" id="promoCodes">
              <div class="d-flex justify-content-center">
                <div class="spinner-grow slow" role="status" id="loadingTasks">
                  <span class="sr-only">Loading...</span>
                </div>
              </div>
            </ul>
            
          </div>
        </div>
    </section>
</main>


