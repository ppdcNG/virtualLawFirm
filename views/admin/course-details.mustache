<script>
  $('#contentType').select2();

  $("#contentType").change(() => {
    let ct = document.querySelector("#contentType").value;

    if (ct === "lesson") {
      $("#lessonSection").css("display", "block");
      $("#questionSection").css("display", "none");
    } else if (ct === "question") {
      $("#lessonSection").css("display", "none");
      $("#questionSection").css("display", "block");
    }

  })

</script>
