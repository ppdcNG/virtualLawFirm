      </table>
      <div class="d-flex justify-content-center">
        <div class="spinner-grow slow" role="status" id="loadingTasks">
          <span class="sr-only">Loading...</span>
        </div>
      </div>
    </div>

    <div class="text-right">
      <button class="btn btn-default" onclick = "prev()"><i class="fa fa-arrow-left"></i> Prev</button>
      <button class="btn btn-default" onclick = "next()">Next <i class="fa fa-arrow-right"></i></button>
    </div>
  </div>
  </div>

   <div class="tab-pane fade" id="chatTab" role="tabpanel" aria-labelledby="chatTab">
    <section class="h-50">Chat</section>
   </div>

   <div class="tab-pane fade" id="legalAdviceTab" role="tabpanel" aria-labelledby="legalAdviceTab">
    <section class="h-50">Legal Advice</section>   
