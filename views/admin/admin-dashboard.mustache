</div>

</main>

{{! add lawyer modal }}
<!-- Modal -->
<div class="modal fade" id="lawyerModal" tabindex="-1" role="dialog" aria-labelledby="lawyerModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="lawyerModalLabel">Send Lawyer Invite</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <div class="card-body px-lg-5 pt-0">
            <form class="text-center" style="color: #757575;" id="lawyerInvite">
                <div class="form-row">
                    <div class="col">
                        <div class="md-form">
                            <input type="text" id="fname" name="firstname" class="form-control">
                            <label for="fname">First name</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="md-form">
                            <input type="text" id="lname" name="lastname" class="form-control">
                            <label for="lname">Last name</label>
                        </div>
                    </div>
                </div>
                
                <div class="md-form mt-0">
                    <input type="email" id="mail" name="email" class="form-control">
                    <label for="email">E-mail</label>
                </div>

                <button class="btn btn-default btn-rounded btn-block my-4 waves-effect z-depth-0" id="sendInvite" type="submit">Send</button>

                <hr>

            </form>
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" id="close" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

{{! Lawyer details modal }}
<div class="modal fade" id="detailsModal" tabindex="-1" role="dialog" aria-labelledby="detailsModal"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h4 class="modal-title w-100 font-weight-bold">Details</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body mx-3">
        <ul class="list-group">
          <li class="list-group-item">
            <img id="profilePic" src="" class="rounded-circle mx-auto d-block" alt="profile_pic" height="80">
          </li>
          <li class="list-group-item default-color">
            <div class="md-v-line"></div><i class="fas fa-user mr-3"></i><span id="name"></span>
          </li>
          <li class="list-group-item">
            <div class="md-v-line"></div><i class="fas fa-map-marker-alt mr-3"></i><span id="loc"></span>
          </li>
          <li class="list-group-item">
            <div class="md-v-line"></div><i class="fas fa-briefcase mr-3"></i><b>Years of Experience</b> <span id="exp"></span>
          </li>
          <li class="list-group-item">
            <div class="md-v-line"></div><i class="fas fa-money-bill-wave mr-3"></i><b>Fee</b> &#8358;<span id="fee"></span>
          </li>
        </ul>
        <div class="text-center">
          <p id="link"></p>
        </div>

      </div>
    </div>
  </div>
</div>


<!-- Task details modal -->
<div class="modal fade" id="taskDetailsModal" tabindex="-1" role="dialog" aria-labelledby="taskDetailsModal"
  aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Task Details</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body container">

        <ul class="list-group list-group-flush">
          <li class="list-group-item elegant-color white-text">Task</li>
          <li class="list-group-item"><b>Subject: </b> <span id = "task_subject">Some issue</span></li>
          <li class="list-group-item"><b>Details: </b> <span class="text-justify" id = "task_issue">History is a relentless master. It has no present, only the past rushing into the future. To try to hold fast is to be swept aside.<span></li>
          <li class="list-group-item"><b>Tags: </b> <span id = "task_tags">Theft</span></li>
          <li class="list-group-item"><b>Status: </b> <span id = "task_status">Pending</span></li>
          <li class="list-group-item"><b>Date: </b> <span id = "task_date">Pending</span></li>
        </ul>

        <ul class="list-group list-group-flush">
          <li class="list-group-item elegant-color white-text">Client</li>
          <div class="list-group-item">
            <p class="mb-0"><i class="far fa-image fa-2x mr-4 grey p-3 white-text rounded-circle " aria-hidden="true"></i><span id = "task_clientName">John Doe</span></p>
          </div>
          <li class="list-group-item"><b>Email: </b> <span id = "task_clientEmail"> jd@mail.com </span></li>
          <li class="list-group-item"><b>Number: </b><span id = "task_clientPhone"> 12345 </span></li>
        </ul>

        <ul class="list-group list-group-flush">
          <li class="list-group-item elegant-color white-text">Lawyer</li>
          <div class="list-group-item">
            <p class="mb-0"><i class="far fa-image fa-2x mr-4 grey p-3 white-text rounded-circle " aria-hidden="true"></i><span id = "task_lawyerName">John Doe</span></p>
          </div>
          <li class="list-group-item"><b>Email: </b> <span id = "task_lawyerEmail">jd@mail.com</span></li>
          <li class="list-group-item"><b>Number: </b><span id = "task_lawyerPhone">12345</span></li>
          <li class="list-group-item"><b>Address: </b> <span id = "task_lawyerAddress">12 ave. abuja</span></li>
        </ul>
      
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

