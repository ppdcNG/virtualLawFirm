        </div>

        <div class="md-form col-md-4">
          <span class="text-muted">Search by Status</span>
          <select class="status form-control w-75" id="status" name="status">
            <option selected>Select</option>
            <option>Pending</option>
            <option>Activated</option>
          </select>          
        </div>

        <div class="md-form col-md-4">
          <span class="text-muted">Search by Tags</span>
          <select class="tags form-control mt-2 w-75" id="tag" name="tag">
              {{{tags}}}
          </select>
        </div>
    
      </form>



      <table class="table table-bordered tale-striped" id="lawyersTable">
        <thead class="black white-text">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Status</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody id="lawyersTable">

        </tbody>
      </table>
    </div>
    <div class="tab-pane fade" id="profile-ex" role="tabpanel" aria-labelledby="profile-tab-ex">
      <!--Accordion wrapper-->
<div class="accordion md-accordion" id="accordionEx1" role="tablist" aria-multiselectable="true">

