{{> header}}
<style>
  * select {
    max-height: 200px !important;
    overflow: auto !important;
  }
  @media only screen and (max-width: 600px) {
    .list-group-item * {
      margin: 0 10px;
    }
  }
</style>
<header>
  <!--Navbar -->
  <nav class="mb-1 pt-3 pb-3 navbar navbar-expand-lg navbar-dark special-color">
    <a class="navbar-brand default-color p-3" href="#">{{AppName}}</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent-333"
      aria-controls="navbarSupportedContent-333" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent-333">

      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="/">Home
            <span class="sr-only">(current)</span>
          </a>
        </li>
      </ul>

      <ul class="navbar-nav ml-auto nav-flex-icons">
        <li class="nav-item avatar">
            <a class="nav-link p-0" href="#">
            <img src="{{photoURL}}" class="rounded-circle z-depth-0"
                alt="avatar image" height="40">
            </a>
        </li>
        <li class="nav-item">
          <a class="nav-link waves-effect waves-light" href="{{ABS_PATH}}logout">
            <i class="fas fa-sign-out-alt"></i> Logout
          </a>
        </li>
      </ul>

        
    </div>
  </nav>
  <!--/.Navbar -->
</header>

<main class="mb-5">

  <section class="container">
    <div class="mt-5">
        <h4 class="text-uppercase font-weight-bold">find a lawyer</h4>
        <p class="text-justify">
            Looking for prepared and iron clad contracts, agreements, licenses documents and other legal documents curated for your specific needs?. 
            Well look no further, Lawtrella legal documents is your one stop hive for legal documents in Nigeria.
        </p>
    </div>

    <section class="h-50" style="display:none" id="loading">
      <div class="spinner-border text-warning" role="status">
        <span class="sr-only">Loading...</span>
      </div>
    </section>

    <div class="d-flex justify-content-end">
      <a class="btn btn-warning" href="/client/askLawyer">Ask a Lawyer</a>
    </div>

    <div class="row row-cols-1 row-cols-md-2 mt-5 pt-3" id="findALawyer" data-aos="zoom-in" data-aos-duration="1000">

      <div class="col-md-4 mb-4">
        <div class="card h-100" style="background-image: url({{ABS_PATH}}images/bg1.png);background-size: cover;background-position: 50% 50%;">
          <div class="card-body rgba-black-strong white-text py-5">
            <h4 class="card-title font-weight-bold py-3">Family Law</h4>
            <p class="card-text white-text">Some of the finest family lawyers at your disposal</p>

            <form id="categ--family-law">
              <div style="display:none">
                <select class="tags form-control mt-2" name="tags[]" multiple="multiple" required>
                    {{{familyLaw}}}
                </select>
              </div>
              <button type="submit" class="btn btn-warning btn-md">Select</button>
            </form>
          </div>
        </div>
      </div>

      <div class="col-md-4 mb-4">
        <div class="card h-100" style="background-image: url({{ABS_PATH}}images/bg2.png);background-size: cover;background-position: 50% 50%;">
          <div class="card-body rgba-black-strong white-text py-5">
            <h4 class="card-title font-weight-bold py-3">Administrative Public Law</h4>
            <p class="card-text white-text">Get lawyersfor your administrative and public matters, food law, sports betting, e.t.c</p>

            <form id="categ--adminPublicLaw">
              <div style="display:none">
                <select class="tags form-control mt-2" name="tags[]" multiple="multiple" required>
                    {{{administrativePublicLaw}}}
                </select>
              </div>
              <button type="submit" class="btn btn-warning btn-md">Select</button>
            </form>
          </div>
        </div>
      </div>

      <div class="col-md-4 mb-4">
        <div class="card h-100" style="background-image: url({{ABS_PATH}}images/bg3.png);background-size: cover;background-position: 50% 50%;">
          <div class="card-body rgba-black-strong white-text py-5">
            <h4 class="card-title font-weight-bold py-3">Land and Property</h4>
            <p class="card-text white-text">Some of the finest family lawyers at your disposal</p>

            <form id="categ--landProperty">
              <div style="display:none">
                <select class="tags form-control mt-2" name="tags[]" multiple="multiple" required>
                    {{{landPropertyLaw}}}
                </select>
              </div>
              <button type="submit" class="btn btn-warning btn-md">Select</button>
            </form>
          </div>
        </div>
      </div>

      <div class="col-md-4 mb-4">
        <div class="card h-100" style="background-image: url({{ABS_PATH}}images/bg4.png);background-size: cover;background-position: 50% 50%;">
          <div class="card-body rgba-black-strong white-text py-5">
            <h4 class="card-title font-weight-bold py-3">Finance / Comercial Law</h4>
            <p class="card-text white-text">Finance and commercial related matters</p>

            <form id="categ--financeCommercial">
              <div style="display:none">
                <select class="tags form-control mt-2" name="tags[]" multiple="multiple" required>
                    {{{financeCommercialLaw}}}
                </select>
              </div>
              <button type="submit" class="btn btn-warning btn-md">Select</button>
            </form>
          </div>
        </div>
      </div>

      <div class="col-md-4 mb-4">
          <div class="card h-100" style="background-image: url({{ABS_PATH}}images/bg5.png);background-size: cover;background-position: 50% 50%;">
            <div class="card-body rgba-black-strong white-text py-5">
              <h4 class="card-title font-weight-bold py-3">Digital / Entertainment and Sport</h4>
              <p class="card-text white-text">Some of the finest family lawyers at your disposal</p>

              <form id="categ--digitalEntertainmentSport">
                <div style="display:none">
                  <select class="tags form-control mt-2" name="tags[]" multiple="multiple" required>
                      {{{digitalEntertainmentLaw}}}
                  </select>
                </div>
                <button type="submit" class="btn btn-warning btn-md">Select</button>
              </form>
            </div>
          </div>
      </div>

      <div class="col-md-4 mb-4">
        <div class="card h-100" style="background-image: url({{ABS_PATH}}images/bg6.png);background-size: cover;background-position: 50% 50%;">
          <div class="card-body rgba-black-strong white-text py-5">
            <h4 class="card-title font-weight-bold py-3">Energy Projects</h4>
            <p class="card-text white-text">Some of the finest family lawyers at your disposal</p>

            <form id="categ--energyProjects">
              <div style="display:none">
                <select class="tags form-control mt-2" name="tags[]" multiple="multiple" required>
                    {{{energyProjectsLaw}}}
                </select>
              </div>
              <button type="submit" class="btn btn-warning btn-md">Select</button>
            </form>
          </div>
        </div>
      </div>

      <div class="col-md-4 mb-4">
          <div class="card h-100" style="background-image: url({{ABS_PATH}}images/bg7.png);background-size: cover;background-position: 50% 50%;">
            <div class="card-body rgba-black-strong white-text py-5">
              <h4 class="card-title font-weight-bold py-3">Others</h4>
              <p class="card-text white-text">Other categories including environmental, arson, medical negligence</p>

            <form id="categ--others">
              <div style="display:none">
                <select class="tags form-control mt-2" name="tags[]" multiple="multiple" required>
                    {{{others}}}
                </select>
              </div>
              <button type="submit" class="btn btn-warning btn-md">Select</button>
            </form>
            </div>
          </div>
        </div>
      </div>

    </div>
  </section>

  <section class="container" id="fetchMatchingLawyerSection" style="display:none">
      <div class="d-flex mb-3 pt-5">
        <h4 class="mr-auto font-weight-bold">Matching Lawyers</h4>
        <button class="btn btn-sm btn-warning font-weight-bold" id="backToFindLawyer"><i class="fas fa-caret-left"></i> Go Back</button>
      </div>
      <div class="row row-cols-1 row-cols-md-2 mt-5 pt-3" id="fetchMatchingLawyers">

      </div>
  </section>

  <div class="container" id="findLawyersSection" style="display:none;overflow: scroll">
    <h2 class="text-center mt-2">What's the Issue? Let's help</h2>

    {{! hidden elements }}
    <input value="{{email}}" id="clientEmail" style="display: none" />
    <input value="{{displayName}}" id="displayName" style="display: none" />
    <input value="{{phoneNumber}}" id="phoneNumber" style="display: none" />
    {{! hidden elements }}
    <hr/>
    <div class="d-flex justify-content-center">
        <!-- Material form group -->
        <form class="w-100 border p-3" id="findLawyerForm">
            <!-- Material input -->
            <div class="md-form form-group mt-5">
                <input type="text" class="form-control" name="subject" id="subject" required>
                <label for="subject">Subject</label>
            </div>
  
            <div class="md-form mb-4 pink-textarea active-pink-textarea-2">
                <textarea id="issues" class="md-textarea form-control" name="issue" rows="3" required></textarea>
                <label for="form23">Type your issue here</label>
            </div>

              <div class="md-form">
              <span class="text-muted">Select Tags Below</span>
                  <select class="tags form-control mt-2" id="tags" name="tags[]" multiple="multiple" required>
                      {{{tags}}}
                  </select>
              </div>

              <button type="button" onclick="goBack()" class="btn"><i class="fas fa-arrow-left"></i> Back</button>

              <div class="md-form text-right">
                  <button type="submit" id="next" class="btn btn-default">Next <i class="fas fa-arrow-right"></i></button>
              </div>
          </form>
          <!-- Material form group -->

      </div>
  </div>

  <section class="container h-75" id="fetchLawyersSection" style="display:none;overflow: scroll">
      <h3 class="text-center mt-3">Lawyers that match your Issue</h3>
      <hr/>
      <ul class="list-group list-group-flush" id="fetchlawyersList">
          <li class="list-group-item d-flex justify-content-between align-items-center">
              <span class="flex-fill">
              <img src="" alt="profile_pic" width="30"/>
              Jessica Pearson</span> <br/>
              <span class="badge badge-info badge-pill p-3">&#8358;<span style="font-size:larger">10000</span></span>
              <a class="btn blue-text ml-4" onclick="payWithPaystack()">select</a>
          </li>
          <li class="list-group-item d-flex justify-content-between align-items-center">
              <img src="" alt="profile_pic" width="30"/>
              <span class="flex-fill">Harvey Specter</span>
              <span class="badge badge-info badge-pill p-3">&#8358;<span style="font-size:larger">10000</span></span>
              <a class="btn blue-text ml-4">select</a>
          </li>
          <li class="list-group-item d-flex justify-content-between align-items-center">
              <img src="" alt="profile_pic" width="30"/>
              <span class="flex-fill">Lewis Litt</span><br/>
              <span class="badge badge-info badge-pill p-3">&#8358;<span style="font-size:larger">10000</span></span>
              <a class="btn blue-text ml-4">select</a>
          </li>
      </ul>
      <div class="md-form text-left">
        <button type="submit" id="prev" class="btn btn-default"><i class="fas fa-arrow-left"> Back</i></button>
      </div>
  </section>
</main>

{{> footer}}
<script src="{{ABS_PATH}}js/auth.js"></script>
<script src="{{ABS_PATH}}js/libraries/form2js.js"></script>
<script src="https://js.paystack.co/v1/inline.js"></script>
<script src="{{ABS_PATH}}js/libraries/accounting.js"></script>
<script src="{{ABS_PATH}}js/client/findLawyer.js"></script>




<script>
    $('#tags').select2({
      maximumSelectionLength: 3
    });

    $('.category--tags').select2();

    loadBtn('next');
</script>
<script>
    const goBack = () => {
        window.history.back();
    }
</script>
