{{> header}}

<div class="container d-flex flex-column justify-content-center align-items-center">
    <div class="card mt-5 mb-5" id = "registerPane" style = "min-width: 70%">
        <h5 class="card-header special-color white-text text-center py-4">
            <strong>Sign up</strong>
        </h5>

        <div class="card-body px-lg-5 pt-0">

            <form id  = "clientRegisterForm" class="text-center" style="color: #757575;" action="#!">

                <div class="form-row">
                    <div class="col">
                        <div class="md-form">
                            <input type="text" id="fname" name = "firstname" class="form-control">
                            <label for="fname">First name</label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="md-form">
                            <input type="text" id="lname" name = "lastname" class="form-control">
                            <label for="lname">Last name</label>
                        </div>
                    </div>
                </div>

                <div class="md-form mt-0">
                    <input type="number"  name = "phone" id="pnumber" class="form-control">
                    <label for="pnumber">Phone number</label>
                </div>
                
                <div class="md-form mt-0">
                    <input type="email" name = "email" id="email" class="form-control">
                    <label for="email">E-mail</label>
                </div>

                 <div class="md-form mt-0">
                    <input type="email" name = "emailconfirm" id="email2" class="form-control">
                    <label for="email2">Re-type E-mail</label>
                </div>

                <button id = "signup" class="btn btn-outline-dark btn-rounded btn-block my-4 waves-effect z-depth-0" type="submit">Register</button>

                <hr>

                <!-- Terms of service -->
                <p>By clicking
                    <em>Register</em> you agree to our
                    <a href="#" data-toggle = "modal" data-target = "#exampleModalCenter">terms of service</a></p>

            </form>
            <!-- Form -->
            <p>Return to <a href="/">Homepage</a></p>
        </div>

    </div>
    <div  id = "signupComplete" style = "display: none">
      <div class= "card mt-5 mb-5 p-5">
        <div calss = "card-body p-3">
          <div  class = "d-flex flex-column justify-content-around align-items-center">
            <i class = "fas fa-check fa-7x green white-text mb-3"></i>
            <span class = "h3 grey-text">Verification Email Been Sent</span>
            <span class = "h6 grey-text">Check your mail and follow link to complete your registration</span>
          </div>
        </div>
      </div>
    </div>
</div>

